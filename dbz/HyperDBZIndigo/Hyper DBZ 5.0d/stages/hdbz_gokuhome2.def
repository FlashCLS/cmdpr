[info]
name 		= "Goku's House - Night"
displayname	= "Goku's House - Night"
author		= "Daeron"

[camera]
startx 		= 0;-16
starty 		= 0
boundleft 	= -208;-240
boundright 	= 208
boundhigh 	= -300 ;-400
boundlow 	= 0
verticalfollow 	= .75
tension 	= 50
floortension 	= 90


;--------------------------------------------------------
[playerinfo]
p1startx = -70;-86          ;starting x coordinates
p1starty = 0            ;starting y coordinates
p1startz = 0            ;starting z coordinates
p1facing = 1            ;direction player faces: 1=right, -1=left

p2startx = 70;54
p2starty = 0
p2startz = 0
p2facing = -1

leftbound  = -1000 ;left bound (x-movement)
rightbound =  1000 ;right bound
topbound  =  0   ;Top bound (z-movement)
botbound  =  0    ;Bottom bound

;--------------------------------------------------------
[scaling]
topz     = 0       ;top z-coordinate for scaling
botz     = 50      ;bottom z-coordinate for scaling
topscale = 1       ;scale to use at top
botscale = 1.2     ;scale to use at bottom

;--------------------------------------------------------
[bound]
screenleft = 30 ;25    ;dist from left of screen that player can move to
screenright = 30 ;25   ;right edge

;--------------------------------------------------------
[stageinfo]
 
zoffset = 220
autoturn = 1
resetbg = 0

;--------------------------------------------------------
[shadow]
intensity = 60
color = 20,20,20
fade.range = 0,-50
yscale = 0.3


;--------------------------------------------------------
[music]

bgmusic = sound/stages/hdbz_gokuhome2.mp3
bgvolume = 100

